<h1>Eat Da Burger!</h1>

<h2>Burgers Not Eaten!</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burger-block devoured=true}}
  {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured!</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  {{> burgers/burger-block devoured=false}}
  {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form id="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" id="devoured" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0" id="not_devoured"> Not Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>

{{!-- awake == not_devoured
      sleepy == devoured --}}